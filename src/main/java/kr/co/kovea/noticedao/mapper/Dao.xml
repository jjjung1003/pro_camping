<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybats-3-mapper.dtd">
	
<mapper namespace="kr.co.kovea.noticedao.NoticeDao">

	<insert id="write_ok" parameterType="kr.co.kovea.noticedto.NoticeDto">
		insert into notice(name,title,content,fname,fsize,writeday)
		values(#{name},#{title},#{content},#{fname},#{fsize},now())
	</insert>
	
	<select id="list" resultType="kr.co.kovea.noticedto.NoticeDto">
		select * from notice
	</select>
	
	<update id="hit">
		update notice set hit=hit+1 where id=#{param}
	</update>

	<select id="content" resultType="kr.co.kovea.noticedto.NoticeDto">
		select * from notice where id=#{param}
	</select>
	
	<select id="update" resultType="kr.co.kovea.noticedto.NoticeDto">
		select * from notice where id=#{param}
	</select>

	<update id="update_ok" parameterType="kr.co.kovea.noticedto.NoticeDto">
		update notice set name=#{name}, title=#{title}, content=#{content}, fname=#{fname} where id=#{id}
	</update>

	<delete id="delete">
		delete from notice where id=#{param}
	</delete>













</mapper>